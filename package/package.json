{
	"name": "leblog",
	"license": "MIT",
	"version": "0.9.0",
	"description": "Add a blog (or changelog) to any SvelteKit site.",
	"repository": {
		"type": "git",
		"url": "https://github.com/nbgoodall/leblog",
		"directory": "package"
	},
	"homepage": "https://leblog.dev",
	"author": "Nick Goodall",
	"scripts": {
		"dev": "vite build && svelte-package --watch",
		"dev:server": "vite dev",
		"build": "vite build && cp -r build src/lib/server && npm run package",
		"build:server": "vite build",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		},
		"./vite": {
			"types": "./dist/vite.d.ts",
			"default": "./dist/vite.js"
		},
		"./entries": {
			"types": "./dist/entries.d.ts",
			"default": "./dist/index.js"
		}
	},
	"typesVersions": {
		">4.0": {
			"index.d.ts": [
				"./dist/index.d.ts"
			],
			"vite": [
				"./dist/vite.d.ts"
			],
			"entries": [
				"./dist/entries.d.ts"
			]
		}
	},
	"files": [
		"dist/*"
	],
	"dependencies": {
		"@sveltejs/adapter-node": "^1.2.4",
		"changelog-parser": "^3.0.1",
		"feed": "^4.2.2",
		"gray-matter": "^4.0.3",
		"micromark": "^3.1.0",
		"micromark-extension-gfm": "^2.0.1",
		"micromark-extension-gfm-footnote": "^1.1.2"
	},
	"devDependencies": {
		"@sveltejs/kit": "^1.20.5",
		"@sveltejs/package": "^2.1.0",
		"@tailwindcss/typography": "^0.5.9",
		"autoprefixer": "^10.4.7",
		"chokidar": "^3.5.3",
		"mdsvex": "^0.11.0",
		"postcss": "^8.4.24",
		"publint": "^0.1.9",
		"svelte": "^4.0.0",
		"svelte-check": "^3.4.3",
		"tailwindcss": "^3.1.5",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^4.3.6"
	},
	"peerDependencies": {
		"@sveltejs/kit": "^1.0.0",
		"svelte": "^3.54.0"
	},
	"types": "./dist/index.d.ts",
	"type": "module"
}
